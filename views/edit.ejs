<% include ./partials/header.ejs %>

<div class='ui main container segment'>
    <div class='ui huge header'>Edit "<%= blog.title %>"</div>
    <form class='ui form' action='/blogs/<%= blog._id %>?_method=PUT' method='POST'> <!--method override to PUT-->
        <div class='field'>
            <label>Title</label>
            <input type='text' placeholder='title' name='blog[title]' value='<%= blog.title %>'>
        </div>
        <div class='field'>
            <label>Image</label>
            <input type='text' placeholder='image' name='blog[image]' value='<%= blog.image %>'>
        </div>
        <div class='field'>
            <label>Blog Content</label>
            <textarea name='blog[body]'> <%= blog.body %> </textarea>
        </div>
        <input class='ui button large basic violet' type='submit'>
    </form>
</div>

<% include ./partials/footer.ejs %>